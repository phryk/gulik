#!/usr/bin/env python3.6

import os.path
import setproctitle
import gulik

def main():

    setproctitle.setproctitle('gulik')
    app = gulik.Gulik()

    config_path = os.path.expanduser('~/.config/gulik/config.py') # TODO: allow path to be passed as arg
    app.apply_config(config_path)

    app.start()


if __name__ == '__main__':
    main()
